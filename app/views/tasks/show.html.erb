<h1><%= @task.title %></h1>
<p>Description: <%= @task.details %></p>
<% if @task.completed %>
<p><%= "This task is completed" %></p>
<% else %>
<p><%= "This task is not completed" %></p>
<% end %>
<%= link_to "Edit this task", edit_task_path %>
<br>
<%= link_to "Delete this task", task_path(@task), data: {turbo_method: :delete, turbo_confirm: "Are you sure you want to delete this task?"} %>
<br>
<%= link_to "Back to tasks list", tasks_path %>
