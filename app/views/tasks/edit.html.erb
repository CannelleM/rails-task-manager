<h1>Edit your task</h1>
<%= form_with model: @task do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>
  <%= f.label :details %>
  <%= f.text_field :details %>
  <%= f.label :completed, "Done?" %>
  <%= f.check_box :completed %>
  <%= f.submit "Edit task" %>
<% end %>
<br>
<%= link_to "Back to tasks list", tasks_path %>

